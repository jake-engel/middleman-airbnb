<div class="container">
  <div class="row">
    <% %w(berlin shanghai paris tokyo rio amsterdam).each do |city| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://kitt.lewagon.com/placeholder/cities/<%= city %>');">
        <div class="card-category">Popular</div>
        <div class="card-description">
          <h2>Le Wagon <%= city.capitalize %></h2>
          <p>Very cool <%= city.capitalize %>, the best</p>
        </div>
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/tgenaitay", class: "card-user" %>
        <%= link_to "", "#", class: "card-link"  %>
      </div>
    </div>
    <% end %>
  </div>
</div>
